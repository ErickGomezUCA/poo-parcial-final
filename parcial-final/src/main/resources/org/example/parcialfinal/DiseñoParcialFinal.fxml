<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="668.0" prefWidth="692.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.parcialfinal.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fitHeight="222.0" fitWidth="298.0" pickOnBounds="true" preserveRatio="true" />
   <HBox maxWidth="-Infinity" prefHeight="32.0">
      <children>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="37.0" prefWidth="89.0" text="UserName" />
            </children>
         </VBox>
         <VBox prefHeight="30.0" prefWidth="250.0">
            <children>
               <TextField fx:id="txtUserName" alignment="TOP_CENTER" onAction="#inputUserName" />
            </children>
         </VBox>
      </children>
   </HBox>

    <Label fx:id="welcomeText" />
   <HBox maxWidth="-Infinity" prefHeight="32.0" translateY="-40.0">
      <children>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label alignment="CENTER" prefHeight="42.0" prefWidth="92.0" text="Password" />
            </children>
         </VBox>
         <VBox prefHeight="43.0" prefWidth="256.0">
            <children>
               <TextField fx:id="txtPassword" onAction="#inputPassword" prefHeight="0.0" prefWidth="411.0" />
            </children>
         </VBox>
      </children>
   </HBox>
   <ButtonBar maxWidth="-Infinity" prefHeight="26.0" prefWidth="154.0">
     <buttons>
       <Button fx:id="btnIngresar" mnemonicParsing="false" onAction="#onGetIntoButtonClick" text="Ingresar" />
         <Button fx:id="btnSalir" mnemonicParsing="false" onAction="#onGoOutButtonClick" text="Salir" />
     </buttons>
      <padding>
         <Insets right="20.0" />
      </padding>
   </ButtonBar>
</VBox>
